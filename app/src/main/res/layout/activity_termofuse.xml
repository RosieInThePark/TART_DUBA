<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:weightSum="1"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/termOfUseTextView"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#fbf0c4"
        android:elevation="1dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/term_of_use_title"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/service"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:background="@drawable/magnify_glass" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:background="@color/grey">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/i_agree"
                    android:textSize="21sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/_2_personal_information"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:background="@drawable/magnify_glass" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:background="@color/grey">

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/i_agree"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="@color/darker_grey">
            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:background="@color/grey">

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/i_agree"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="@color/darker_grey">
            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:background="@color/grey">

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="@string/i_agree"
                    android:textSize="21sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/darker_orange"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/next"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_weight="0.2"/>

</LinearLayout>
