<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="0.10"
                android:alpha="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/themeButton0"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:alpha="0.3"
                    android:background="@drawable/icon_single"
                    android:src="@drawable/icon_single"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/v_color"
                    android:textSize="50sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginEnd="0dp"
                    android:text="SINGLE"
                    android:textAlignment="center"
                    android:textColor="#a41414"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="0.10"
                android:alpha="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/themeButton1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:alpha="0.3"
                    android:background="@drawable/icon_family"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/v_color"
                    android:textSize="50sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="FAMILY"
                    android:textAlignment="center"
                    android:textColor="#aa760d"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:alpha="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/themeButton2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:alpha="0.3"
                    android:background="@drawable/icon_couple"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/v_color"
                    android:textSize="50sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginEnd="0dp"
                    android:text="COUPLE"
                    android:textAlignment="center"
                    android:textColor="#47755a"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:alpha="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/themeButton3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:alpha="0.3"
                    android:background="@drawable/icon_friend"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/v_color"
                    android:textSize="50sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginEnd="0dp"
                    android:text="FRIEND"
                    android:textAlignment="center"
                    android:textColor="#21304f"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="5dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/suggestOtherPlaceButton"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:text="OTHER SPOT"
                    android:textAllCaps="false"
                    android:textColor="@color/v_color"
                    android:textSize="15sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="1"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/suggestPathButton"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="0dp"
                    android:text="BEST PATH"
                    android:textAllCaps="false"
                    android:textColor="@color/v_color"
                    android:textSize="15sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>