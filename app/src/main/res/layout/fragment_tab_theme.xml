<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.6"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="0.10"
            android:alpha="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/themeButton0"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="0dp"
                android:alpha="0.5"
                android:background="@drawable/icon_single" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginEnd="0dp"
                android:text="SINGLE"
                android:textAlignment="center"
                android:textColor="#a41414"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="0.10"
            android:alpha="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/themeButton1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="0dp"
                android:alpha="0.5"
                android:background="@drawable/icon_family" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="FAMILY"
                android:textAlignment="center"
                android:textColor="#aa760d"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:alpha="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/themeButton2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="0dp"
                android:alpha="0.5"
                android:background="@drawable/icon_couple" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginEnd="0dp"
                android:text="COUPLE"
                android:textAlignment="center"
                android:textColor="#47755a"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:alpha="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/themeButton3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="0dp"
                android:alpha="0.5"
                android:background="@drawable/icon_friend" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginEnd="0dp"
                android:text="FRIEND"
                android:textAlignment="center"
                android:textColor="#21304f"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>