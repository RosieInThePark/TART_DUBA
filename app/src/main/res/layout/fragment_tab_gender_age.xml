<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.6"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="0.10"
            android:orientation="vertical">

            <Button
                android:id="@+id/themeButton0"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="0dp"
                android:alpha="0.5"
                android:background="@drawable/icon_child" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginEnd="0dp"
                android:text="CHILD"
                android:textAlignment="center"
                android:textColor="#b3c507"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="0.10"
            android:orientation="vertical">

            <Button
                android:id="@+id/themeButton1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="0dp"
                android:alpha="0.5"
                android:background="@drawable/icon_adult" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="ADULT"
                android:textAlignment="center"
                android:textColor="#71ff9d"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:orientation="vertical">

            <Button
                android:id="@+id/themeButton2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="0dp"
                android:alpha="0.5"
                android:background="@drawable/icon_elderly" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginEnd="0dp"
                android:text="ELDERLY"
                android:textAlignment="center"
                android:textColor="#5543ff"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>